{
	"geode": "4.7.0",
	"gd": {
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074",
		"ios": "2.2074"
	},
	"id": "lofracotestino.better_creator_layer",
	"name": "Reworked Creator Layer",
	"version": "v1.4.0",
	"developer": "Lofracotestino",
	"description": "reworks some buttons in the Creator Layer.",
	"resources": {
        "spritesheets": {
            "TextureSheet": [
                "resources/sheet/*.png"
        	]
		},
		"sprites": [
			"resources/*.png"
		]
	},
    "dependencies": {
        "geode.node-ids": ">=v1.21.0"
    },
	"incompatibilities": {
		"capeling.goodbye_unnecessary_buttons": {
			"version": ">=v1.0.0",
      "importance": "conflicting"
		},
		"noxygalaxy.bring_back_16": {
			"version": ">=1.0.0",
			"importance": "conflicting"
		}
	},
	"links": {
		"source": "https://github.com/LofracotestinoGD/Better-CreatorLayer"
	},
	"issues": {
		"url": "https://github.com/LofracotestinoGD/Better-CreatorLayer/issues",
		"info": "You can add issues on the following link to let me know."
	},
	"settings": {
		"enable-setting": {
			"type": "bool",
			"name": "Disable",
			"default": false
		},
		"color-settings": {
			"type": "title",
			"name": "Color Settings",
			"description": "Change the Color of Every Button!"
		},
		"quest-color-setting": {
			"type": "string",
			"name": "Color of Quest Button",
			"default": "Green",
			"one-of": ["Blue", "Cyan", "Dark Aqua", "Dark Purple", "Gray", "Green", "Pink"]
		},
		"saved-color-setting": {
			"type": "string",
			"name": "Color of Saved Button",
			"default": "Green",
			"one-of": ["Blue", "Cyan", "Dark Aqua", "Dark Purple", "Gray", "Green", "Pink"]
		},
		"gauntlet-color-setting": {
			"type": "string",
			"name": "Color of Gauntlets Button",
			"default": "Green",
			"one-of": ["Blue", "Cyan", "Dark Aqua", "Dark Purple", "Gray", "Green", "Pink"]
		},
		"mck-color-setting": {
			"type": "string",
			"name": "Color of Map Packs Button",
			"default": "Green",
			"one-of": ["Blue", "Cyan", "Dark Aqua", "Dark Purple", "Gray", "Green", "Pink"]
		},
		"paths-color-setting": {
			"type": "string",
			"name": "Color of Paths Button",
			"default": "Green",
			"one-of": ["Blue", "Cyan", "Dark Aqua", "Dark Purple", "Gray", "Green", "Pink"]
		},
		"scores-color-setting": {
			"type": "string",
			"name": "Color of Scores Button",
			"default": "Green",
			"one-of": ["Blue", "Cyan", "Dark Aqua", "Dark Purple", "Gray", "Green", "Pink"]
		},
		"gddp-color-setting": {
			"type": "string",
			"name": "Color of GDDP Button",
			"default": "Green",
			"one-of": ["Blue", "Cyan", "Dark Aqua", "Dark Purple", "Gray", "Green", "Pink"]
		},
		"gdr-color-setting": {
			"type": "string",
			"name": "Color of GD-Roulette Button",
			"default": "Green",
			"one-of": ["Blue", "Cyan", "Dark Aqua", "Dark Purple", "Gray", "Green", "Pink"]
		},
		"sc-color-setting": {
			"type": "string",
			"name": "Color of Shortcuts Button",
			"default": "Green",
			"one-of": ["Blue", "Cyan", "Dark Aqua", "Dark Purple", "Gray", "Green", "Pink"]
		},
		"timely-color-setting": {
			"type": "string",
			"name": "Color of Timely Button",
			"default": "Green",
			"one-of": ["Blue", "Cyan", "Dark Aqua", "Dark Purple", "Gray", "Green", "Pink"]
		},
		"extra-settings": {
			"type": "title",
			"name": "Extra Settings",
			"description": "Settings that are Extra!!"
		},
		"button-sprite-size-setting": {
			"type": "float",
			"name": "Scroll Sprite Size",
			"description": "Changes the size of the button sprite to your liking!",
			"default": 0.75,
			"min": 0.1,
			"max": 1,
			"control": {
				"arrows": true,
				"arrow-step": 0.05,
				"big-arrows": false,
				"slider": true,
				"slider-step": 0.1,
				"input": false
			}
		},
		"stupid-gddp-sprite": {
			"type": "bool",
			"name": "Stupid GDDP Button Texture",
			"default": false
		},
		"flip-menus": {
			"type": "bool",
			"name": "Swap Bottom/Left Menus",
			"default": false,
			"description": "Flip the bottom-left menu with the bottom menu."
		},
		"compact-button": {
			"type": "bool",
			"name": "Compact Timely Button",
			"default": false,
			"description": "Have the timely button in a compact circle button instead of the creator buttons menu."
		},
		"unhide-extra-buttons": {
			"type": "bool",
			"name": "Show Unused Buttons",
			"default": false
		}
	},
	"tags": ["offline", "interface"]
}



